	helper = 
	helper = !/usr/bin/gh auth git-credential

[core]
	autocrlf = input
	editor = nvim

[credential]
	helper = cache

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[push]
	autoSetupRemote = true
